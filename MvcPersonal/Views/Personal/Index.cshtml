@model IEnumerable<MvcPersonal.Models.Personal>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1>Список сотрудников</h1>
    @using (Html.BeginForm("Index", "Personal", FormMethod.Get))
    {
        <p>
            Отдел:@Html.DropDownList("department", "Все")
            Сотрудник:@Html.TextBox("searchstring")
            <input type="submit" value="Фильтр" />
        </p>
    }
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Profession)</th>
            <th>@Html.DisplayNameFor(model => model.Department)</th>
            <th>@Html.DisplayNameFor(model => model.Salary)</th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelitem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelitem => item.Profession)
        </td>
        <td>
            @Html.DisplayFor(modelitem => item.Department)
        </td>
        <td>
            @Html.DisplayFor(modelitem => item.Salary)
        </td>
        <td>
            @Html.ActionLink("Подробнее", "Details", new { id = item.Id })
            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id })
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
        }
    </table>
    @Html.ActionLink("Главная", "Index")
</div>

